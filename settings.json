// Place your settings in this file to overwrite the default settings
{
    "window.zoomLevel": 0,
    "files.trimTrailingWhitespace": true,
    // "files.autoSaveDelay": 2000,
    // "files.autoSave": "afterDelay",
    // onFocusChange - to save files when focus moves out of the editor of the dirty file.
    // onWindowChange - to save files when the focus moves out of the VS Code window.
    "files.associations": {
        "*.js": "javascript",
        "*.html.eex": "html",
        "*.html.leex": "HTML (Eex)",
        "*.leex": "HTML (EEx)",
        "*.ex": "elixir",
        "*.exs": "elixir"
    },
    "files.exclude": {
        "**/.git": true
    },
    "files.autoSave": "onWindowChange",
    "git.enableSmartCommit": true,
    "editor.renderIndentGuides": true,
    "search.exclude": {
        "**/deps": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/_build": true,
        "**/elm-stuff": true,
        "**/assets/elm/elm-stuff": true,
        "**/assets/elm/tests/elm-stuff": true,
        "**/*/js": true
    },
    "elm.makeCommand": "/home/andrew/.nvm/versions/node/v8.4.0/bin/elm-make",
    "elm.formatCommand": "/home/andrew/.nvm/versions/node/v8.4.0/bin/elm-format",
    "[elm]": {
        "editor.formatOnSave": true
    },
    "emmet.includeLanguages": {
        "html-eex": "html"
    },
    "git.autofetch": true,
    "editor.formatOnSave": true,
    "copy-syntax.defaults.python": "/usr/bin/python3",
    "elixirLS.dialyzerEnabled": false,
    "elixirLS.fetchDeps": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "workbench.enableExperiments": false,
    "emmet.showSuggestionsAsSnippets": true
}